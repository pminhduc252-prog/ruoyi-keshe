<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.HospitalDoctorMapper">
    
    <resultMap type="HospitalDoctor" id="HospitalDoctorResult">
        <result property="doctorId"    column="doctor_id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="docName"    column="doc_name"    />
        <result property="docCode"    column="doc_code"    />
        <result property="gender"    column="gender"    />
        <result property="jobTitle"    column="job_title"    />
        <result property="specialty"    column="specialty"    />
        <result property="consultationFee"    column="consultation_fee"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHospitalDoctorVo">
        select doctor_id, dept_id, doc_name, doc_code, gender, job_title, specialty, consultation_fee, status, create_by, create_time, update_by, update_time, remark from hospital_doctor
    </sql>

    <select id="selectHospitalDoctorList" parameterType="HospitalDoctor" resultMap="HospitalDoctorResult">
        <include refid="selectHospitalDoctorVo"/>
        <where>  
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="docName != null  and docName != ''"> and doc_name like concat('%', #{docName}, '%')</if>
            <if test="docCode != null  and docCode != ''"> and doc_code = #{docCode}</if>
            <if test="gender != null  and gender != ''"> and gender = #{gender}</if>
            <if test="jobTitle != null  and jobTitle != ''"> and job_title = #{jobTitle}</if>
            <if test="specialty != null  and specialty != ''"> and specialty = #{specialty}</if>
            <if test="consultationFee != null "> and consultation_fee = #{consultationFee}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHospitalDoctorByDoctorId" parameterType="Long" resultMap="HospitalDoctorResult">
        <include refid="selectHospitalDoctorVo"/>
        where doctor_id = #{doctorId}
    </select>

    <insert id="insertHospitalDoctor" parameterType="HospitalDoctor" useGeneratedKeys="true" keyProperty="doctorId">
        insert into hospital_doctor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deptId != null">dept_id,</if>
            <if test="docName != null and docName != ''">doc_name,</if>
            <if test="docCode != null and docCode != ''">doc_code,</if>
            <if test="gender != null">gender,</if>
            <if test="jobTitle != null">job_title,</if>
            <if test="specialty != null">specialty,</if>
            <if test="consultationFee != null">consultation_fee,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deptId != null">#{deptId},</if>
            <if test="docName != null and docName != ''">#{docName},</if>
            <if test="docCode != null and docCode != ''">#{docCode},</if>
            <if test="gender != null">#{gender},</if>
            <if test="jobTitle != null">#{jobTitle},</if>
            <if test="specialty != null">#{specialty},</if>
            <if test="consultationFee != null">#{consultationFee},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHospitalDoctor" parameterType="HospitalDoctor">
        update hospital_doctor
        <trim prefix="SET" suffixOverrides=",">
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="docName != null and docName != ''">doc_name = #{docName},</if>
            <if test="docCode != null and docCode != ''">doc_code = #{docCode},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="jobTitle != null">job_title = #{jobTitle},</if>
            <if test="specialty != null">specialty = #{specialty},</if>
            <if test="consultationFee != null">consultation_fee = #{consultationFee},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where doctor_id = #{doctorId}
    </update>

    <delete id="deleteHospitalDoctorByDoctorId" parameterType="Long">
        delete from hospital_doctor where doctor_id = #{doctorId}
    </delete>

    <delete id="deleteHospitalDoctorByDoctorIds" parameterType="String">
        delete from hospital_doctor where doctor_id in 
        <foreach item="doctorId" collection="array" open="(" separator="," close=")">
            #{doctorId}
        </foreach>
    </delete>
</mapper>